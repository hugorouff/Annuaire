{% extends 'index.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
    <h1>Site index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Description</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.id }}</td>
                <td>{{ site.url }}</td>
                <td>{{ site.description }}</td>
                <td>{{ site.titre }}</td>
                <td>{{ site.slug }}</td>
                <td>
                    <a href="{{ path('app_site_show', {'id': site.id}) }}">show</a>
                    <a href="{{ path('app_site_edit', {'id': site.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_site_new') }}">Create new</a>
{% endblock %}
